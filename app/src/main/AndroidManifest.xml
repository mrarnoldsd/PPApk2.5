<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prisonpay.app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="PrisonPay"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PrisonPay">

        <!-- 🔐 Main business logic screen (protected, opens after calculator unlock) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- 🔢 Calculator unlock screen -->
        <activity
            android:name=".CalculatorActivity"
            android:exported="false" />

        <!-- 🚪 First screen: splash with jail animation -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>

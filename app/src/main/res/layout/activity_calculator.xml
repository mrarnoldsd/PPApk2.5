<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brick_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/calculator_display"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:gravity="end|center_vertical"
        android:background="#DD000000"
        android:textColor="#ffffff"
        android:textSize="36sp"
        android:padding="12dp"
        android:text="0" />

    <GridLayout
        android:id="@+id/calculator_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calculator_display"
        android:layout_marginTop="16dp"
        android:columnCount="4"
        android:rowCount="5"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <!-- Row 1 -->
        <Button style="@style/CalcButton" android:id="@+id/btn_7" android:text="7" />
        <Button style="@style/CalcButton" android:id="@+id/btn_8" android:text="8" />
        <Button style="@style/CalcButton" android:id="@+id/btn_9" android:text="9" />
        <Button style="@style/CalcButton" android:id="@+id/btn_divide" android:text="÷" />

        <!-- Row 2 -->
        <Button style="@style/CalcButton" android:id="@+id/btn_4" android:text="4" />
        <Button style="@style/CalcButton" android:id="@+id/btn_5" android:text="5" />
        <Button style="@style/CalcButton" android:id="@+id/btn_6" android:text="6" />
        <Button style="@style/CalcButton" android:id="@+id/btn_multiply" android:text="×" />

        <!-- Row 3 -->
        <Button style="@style/CalcButton" android:id="@+id/btn_1" android:text="1" />
        <Button style="@style/CalcButton" android:id="@+id/btn_2" android:text="2" />
        <Button style="@style/CalcButton" android:id="@+id/btn_3" android:text="3" />
        <Button style="@style/CalcButton" android:id="@+id/btn_minus" android:text="−" />

        <!-- Row 4 -->
        <Button style="@style/CalcButton" android:id="@+id/btn_0" android:text="0" />
        <Button style="@style/CalcButton" android:id="@+id/btn_dot" android:text="." />
        <Button style="@style/CalcButton" android:id="@+id/btn_equals" android:text="=" />
        <Button style="@style/CalcButton" android:id="@+id/btn_plus" android:text="+" />

        <!-- Row 5 -->
        <Button
            style="@style/CalcButton"
            android:id="@+id/btn_clear"
            android:text="C"
            android:layout_columnSpan="4"
            android:layout_width="match_parent" />
    </GridLayout>
</RelativeLayout>

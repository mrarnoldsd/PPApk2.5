<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brick_background"
    tools:context=".CalculatorActivity">

    <!-- Logo on top -->
    <ImageView
        android:id="@+id/prisonpay_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/prisonpay_logo"
        android:contentDescription="PrisonPay logo" />

    <!-- Calculator Display -->
    <TextView
        android:id="@+id/calculator_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prisonpay_logo"
        android:layout_margin="16dp"
        android:background="@android:color/black"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:text=""/>

    <!-- Jail Bars Overlay (optional) -->
    <ImageView
        android:id="@+id/jail_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/jail_bars_bg"
        android:scaleType="fitXY"
        android:alpha="0.15"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <!-- You can add calculator buttons below here... -->
    
</RelativeLayout>

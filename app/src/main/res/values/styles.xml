<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base app theme -->
    <style name="Theme.PrisonPay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryVariant">#1A1A1A</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#B71C1C</item> <!-- Blood red accent -->
        <item name="android:windowBackground">@drawable/splash_background_v2</item>
        <item name="android:statusBarColor">#000000</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <!-- Theme used ONLY for splash screen (optional fallback) -->
    <style name="Theme.PrisonPay.Splash" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_background_v2</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>

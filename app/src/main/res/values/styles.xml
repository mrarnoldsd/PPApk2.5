<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base app theme -->
    <style name="Theme.PrisonPay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Branding Colors -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryVariant">#1c1c1c</item>
        <item name="colorOnPrimary">#ffffff</item>
        <item name="colorSecondary">#ff9800</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- App background -->
        <item name="android:windowBackground">@drawable/brick_background</item>

        <!-- Font Colors -->
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- Calculator Button Style -->
    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#222</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">12dp</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base app theme -->
    <style name="Theme.PrisonPay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Branding Colors -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryVariant">#1c1c1c</item>
        <item name="colorOnPrimary">#ffffff</item>
        <item name="colorSecondary">#ff9800</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- App background -->
        <item name="android:windowBackground">@drawable/splash_background_v2</item>

        <!-- Font Colors -->
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- Splash Theme -->
    <style name="Theme.PrisonPay.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background_v2</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <!-- Style for calculator buttons -->
    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#222222</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">monospace</item>
    </style>

</resources>
